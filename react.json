{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig",
  "compilerOptions": {
    "composite": false,
    "declaration": false,
    "jsx": "react-jsx",
    "lib": [ "ESNext", "DOM", "DOM.Iterable" ],
    "target": "ES5"
  },
  "include": [
    "${configDir}/src/**/*.ts",
    "${configDir}/src/**/*.tsx",
    "${configDir}/e2e/**/*.ts",
    "${configDir}/test/**/*.ts",
    "${configDir}/*.ts"
  ]
}
